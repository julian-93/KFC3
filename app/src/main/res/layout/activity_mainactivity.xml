<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cp"
    android:layout_height="match_parent"
    tools:context="com.kfc.julianalmanza.kfc.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chuparse"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola"
            android:layout_marginLeft="270sp"
            android:layout_marginTop="20sp"
            android:id="@+id/usuario_main"
            android:textSize="17sp"
            android:textColor="@color/whitesmoke"
            />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disfruta"
                android:textSize="32sp"
                android:layout_marginTop="15sp"
                android:textColor="@color/maroon"
                android:typeface="serif"
                android:layout_marginBottom="25sp"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="15dp"
                android:background="@drawable/kfc_bigbox"
                android:id="@+id/promo"
                android:layout_marginRight="5sp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="30sp"
                        android:layout_height="65sp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/izquierda"
                        android:background="@drawable/flecha_izquieda"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:layout_width="30sp"
                        android:layout_height="65sp"
                        android:id="@+id/derecha"
                        android:layout_gravity="end"
                        android:background="@drawable/flecha_derecha"
                        />

                </LinearLayout>

            </LinearLayout>



            <ImageView
                android:layout_width="330sp"
                android:layout_height="250sp"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:src="@drawable/kfc_preparar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/encontrar"
                android:layout_marginTop="35sp"
                android:textColor="@color/brown"
                android:textSize="20sp"
                android:layout_gravity="center"
                />

            <ImageView
                android:layout_width="300sp"
                android:layout_height="250sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:src="@drawable/kfc_bogota"/>
            <ImageView
                android:layout_width="300sp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:src="@drawable/kfc_medellin"/>
            <ImageView
                android:layout_width="300sp"
                android:layout_height="80sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:src="@drawable/kfc_cali"/>

        </LinearLayout>

    </ScrollView>


    </LinearLayout>

    <ListView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/menuiz"
        android:choiceMode="singleChoice"
        android:foregroundGravity="left"
        android:layout_gravity="start"
        >


    </ListView>
</android.support.v4.widget.DrawerLayout>
